<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relate"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/run_image"
            android:layout_width="1280dip"
            android:layout_height="fill_parent"
            android:scaleType="matrix"
            android:src="@drawable/default_homebg" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/run_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dip"
                android:background="@drawable/left_pointer" />

            <ImageButton
                android:id="@+id/run_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dip"
                android:background="@drawable/right_pointer" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>